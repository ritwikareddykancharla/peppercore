{
  "name": "pepper",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:frontend\"",
    "dev:server": "bun run --hot src/index.ts",
    "dev:frontend": "vite",
    "build": "vite build && echo 'Build complete'",
    "start": "NODE_ENV=production bun run src/index.ts",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@clerk/backend": "2.32.0",
    "@clerk/clerk-react": "5.61.1",
    "@hono/clerk-auth": "3.1.0",
    "@paralleldrive/cuid2": "3.3.0",
    "drizzle-orm": "0.45.1",
    "hono": "^4.0.5",
    "lucide-react": "^0.575.0",
    "postgres": "3.4.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.22.0",
    "resend": "6.9.2",
    "stripe": "20.3.1",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "^1.3.9",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "drizzle-kit": "0.31.9",
    "jsdom": "^28.1.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "vitest": "^4.0.18"
  }
}
